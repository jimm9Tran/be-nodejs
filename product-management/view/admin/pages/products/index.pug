extends ../../layouts/default.pug

block main
    h1 Trang quản lý sản phẩm 

    .card.mb-3
        .card-header Bộ lọc và tìm kiếm 
        .card-body
            button(
                class="btn btn-sm ml-1 btn-outline-success active"
            ) Tất cả
            button(
                class="btn btn-sm ml-1 btn-outline-success"
            ) Hoạt động
            button(
                class="btn btn-sm ml-1 btn-outline-success"
            ) Dừng hoạt động

            form(id="form-search")
                .input-group
                    input.form-control(type="text", name="keyword", placeholder="Tìm kiếm sản phẩm...", value=keyword)
                    button.btn.btn-outline-primary(type="submit") Tìm kiếm    
                    

    .card.mb-3
        .card-header Danh sách sản phẩm
        .card-body
            table.table.table-hover.table-sm 
                thead 
                    tr  
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề
                        th Giá
                        th Trạng thái 
                        th Hành động

                tbody 
                    each item, index in products
                        tr 
                            td #{index + 1}
                            td 
                                img(src=item.thumbnail, alt=item.title, width="50")
                            td #{item.title}
                            td #{item.price}$
                            td
                                if item.deleted
                                    a(href="#" class="badge bg-danger") Đã xóa
                                else
                                    a(href="#" class="badge bg-success") Hoạt động
                            td  
                                button(class="btn btn-warning btn-sm") Sửa
                                button(class="btn btn-danger btn-sm ml-1") Xóa

    nav
        ul(class="pagination")
            li(class="page-item")
            button(class="page-link") Trang trước
            li(class="page-item")
            button(class="page-link") 1
            li(class="page-item active")
            button(class="page-link") 2
            li(class="page-item")
            button(class="page-link") 3
            li(class="page-item")
            button(class="page-link") Kế tiếp
